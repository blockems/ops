<!DOCTYPE html>
<html lang="en">
    <%- include ('./include/header') %>
    <body>
        <%- include ('./include/nav') %>
        <%if (userInfo.me != 0) {%>
            <%-body%>
        <%} else { %>
        <div class="container">
            <div class="col-sm-4 col-sm-offset-4" style="margin-top: 8%; border: 1px solid green; border-radius: 15px; padding: 19px 29px 29px 29px;">
            <form action="/auth/login" method="post">
                <div class="form-group">
                    <label for="emailaddress">Email:</label>
                    <input type="text" class="form-control" placeholder="your@email.com" name="emailaddress" width="100px" />
                </div>
                <div class="form-group">
                    <label for="companyname">Password:</label>
                    <input type="password" class="form-control" placeholder="password" name="password"/>
                </div>
                <hr>
                <input type="submit" class="btn btn-lg btn-primary btn-block" value="Login"/>
            </form>
            </div>
        </div>
        <%}%>
        <%- include ('./include/scripts') %>
        <%- include ('./include/footer') %>
    </body>
</html>